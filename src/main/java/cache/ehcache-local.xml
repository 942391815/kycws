<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<ehcache updateCheck="false" name="defaultCache">

	<diskStore path="java.io.tmpdir/dg/ehcache/default" />

	<!-- DefaultCache setting. -->
	<defaultCache maxEntriesLocalHeap="50" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
		overflowToDisk="true" maxEntriesLocalDisk="100000" />
	
	<!-- 系统缓存 -->
	<cache name="sysCache" maxEntriesLocalHeap="50" eternal="true" overflowToDisk="true"/>
	<!-- 用户缓存 -->
	<cache name="userCache" maxEntriesLocalHeap="50" eternal="true" overflowToDisk="true"/>
	
</ehcache>